<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
        <%= link_to clan.name, clan %>
      </p>
      <p>Tag: <%= link_to clan.tag, clan %></p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        Country: <%= clan.country %>
      </p>
      <p class="card-footer-item">
        Player Count: <%= clan.players.count %>
      </p>
    </footer>
  </div>
</div>