<div class="column">
  <div class="card">
    <div class="card-content">
      <p class="title">
        <%= link_to battle.name, battle %>
      </p>
      <p>Player: <%= link_to battle.player.name, battle.player %></p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        Game Mode: <%= battle.game_mode %>
      </p>
      <p class="card-footer-item">
        Opponent: <%= battle.opponent %>
      </p>
    </footer>
  </div>
</div>