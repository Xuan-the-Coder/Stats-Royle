<div class="columns is-multiline">
  <%= render @player %>
</div>

<h3>Battle Records</h3>

<% if @player.battles.empty? %>
  <p><%= @player.name %> has no battle played.</p>
<% else %>
  <p>Here are the battles <%= @player.name %> played: </p>
    <% @player.battles.each do |battle| %>
      <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image is-64x64">
              <img src="https://api-assets.clashroyale.com/cards/300/cfwk1vzehVyHC-uloEIH6NOI0hOdofCutR5PyhIgO6w.png" alt="Image">
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
                <div><strong><%= @player.name %></strong></div>
                <br>
                <div><%= link_to battle.game_mode, battle %></div>
            </div>
            <nav class="level is-mobile">
              <div class="level-left">
                <a class="level-item" aria-label="reply">
                  <span class="icon is-small">
                    <i class="fas fa-reply" aria-hidden="true"></i>
                  </span>
                </a>
                <a class="level-item" aria-label="retweet">
                  <span class="icon is-small">
                    <i class="fas fa-retweet" aria-hidden="true"></i>
                  </span>
                </a>
                <a class="level-item" aria-label="like">
                  <span class="icon is-small">
                    <i class="fas fa-heart" aria-hidden="true"></i>
                  </span>
                </a>
              </div>
            </nav>
          </div>
        </article>
      </div>

    <% end %>
<% end %>